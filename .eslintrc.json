{
    "extends": "google",
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "indent": ["error", 4],
        "key-spacing": ["error", { "align": "colon" }],
        "no-multi-spaces": ["error", {
            "exceptions": {
                "VariableDeclarator": true
            }
        }],
        "camelcase": ["off"],
        "comma-dangle": ["error", "never"],
        "arrow-parens": ["error", "as-needed"]
    }
}
